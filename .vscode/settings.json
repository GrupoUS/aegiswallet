{
  "typescript.preferences.importModuleSpecifier": "relative",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit",
    "quickfix.biome": "explicit",
    "source.fixAll.oxlint": "explicit",
    "source.organizeImports.oxlint": "explicit"
  },
  "css.lint.unknownProperties": "ignore",
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]],
  "tailwindCSS.validate": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.suggestions": true,
  "files.associations": {
    "*.css": "css"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "oxlint.enable": true,
  "oxlint.configFile": ".oxlintrc.json",
  "oxlint.healthcareConfig": ".oxlintrc.healthcare.json",
  "oxlint.run": "onType",
  "oxlint.nodePath": "./node_modules/.bin/oxlint",
  "oxlint.rules": {
    "security": true,
    "accessibility": true,
    "performance": true,
    "typescript": true,
    "react": true
  },
  "oxlint.ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "*.min.js",
    "*.bundle.js"
  ],
  "oxlint.format.enable": false,
  "oxlint.lintFileNames": [
    "src/**/*.{ts,tsx,js,jsx}",
    "scripts/**/*.{ts,tsx,js,jsx}",
    "vitest.config.ts",
    "vitest.*.config.ts"
  ]
}
