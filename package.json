{
	"name": "aegiswallet",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"bmad:refresh": "bmad-method install -f -i codex",
		"bmad:list": "bmad-method list:agents",
		"bmad:validate": "bmad-method validate",
		"dev": "bunx vite",
		"dev:full": "bunx concurrently \"bunx vite\" \"bun src/server/server.ts\"",
		"dev:client": "bunx vite",
		"dev:server": "bun src/server/server.ts",
		"build": "bun run build:client",
		"build:deploy": "vite build --mode production",
		"build:client": "vite build",
		"build:server": "echo 'Server build no longer needed - using direct Hono deployment'",
		"build:dev": "vite build --mode development",
		"preview": "bun run build && bun run src/server/server.ts",
		"types:generate": "bun db:generate",
		"routes:generate": "bunx @tanstack/router-cli generate",
		"start": "bun run src/server/server.ts",
		"start:prod": "NODE_ENV=production bun run src/server/server.ts",
		"lint": "bunx biome check --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:fix": "bunx biome check --write --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:biome": "bunx biome check --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:biome:fix": "bunx biome check --write --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:biome:security": "bunx biome lint --only=lint/suspicious --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:biome:healthcare": "bunx biome lint --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:biome:types": "bunx biome check --files-ignore-unknown=true --files-max-size=10485760 src scripts && bunx tsc --noEmit",
		"check": "bunx biome check --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"type-check": "bunx tsc --noEmit",
		"verify:routers": "bun run type-check && echo 'âœ“ Router consolidation verified: No legacy files found'",
		"lint:security": "bunx biome lint --only=lint/suspicious --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:performance": "bunx biome lint --only=lint/performance --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"lint:accessibility": "bunx biome lint --only=lint/a11y --files-ignore-unknown=true --files-max-size=10485760 src scripts",
		"test:unit": "vitest run",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"test:healthcare": "vitest run --config vitest.healthcare.config.ts",
		"test:coverage": "vitest run --coverage",
		"test:coverage:critical": "vitest run --coverage --coverage.include='src/lib/security/**,src/lib/compliance/**'",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"test": "bun run test:unit",
		"test:healthcare-full": "bun scripts/run-healthcare-tests.ts",
		"smoke:db": "bun scripts/test-drizzle-connection.ts",
		"env:check": "bun scripts/check-env.ts",
		"quality": "bun run lint:biome && bun run check && bun run test:coverage",
		"quality:ci": "bun run lint:biome:types && bun run check && bun run test:coverage",
		"quality:security": "bun run lint:biome:security && bun run lint:biome:healthcare",
		"quality:performance": "bun run lint:biome && bun run lint:performance && bun run test:unit",
		"quality:parallel": "bunx concurrently \"bun run check\" \"bun run type-check\" \"bun run test --reporter=default\" \"bun run lint:biome:security\" \"bun run test:e2e:lgpd\" --names=\"biome,ts,vitest,security,lgpd\"",
		"quality:gates": "bun run quality:parallel && bun run test:coverage",
		"quality:full": "bun scripts/quality-gates.ts",
		"deploy:vercel:setup": "bash scripts/setup-vercel-env.sh",
		"deploy:vercel:preview": "bash scripts/deploy-vercel.sh",
		"deploy:vercel:prod": "bash scripts/deploy-vercel.sh --prod-direct",
		"deploy:vercel:quick": "vercel deploy --prebuilt",
		"deploy:vercel:quick:prod": "vercel deploy --prod --prebuilt",
		"validate:colors": "bun scripts/validate-colors.ts",
		"export:tokens": "bun scripts/export-design-tokens.ts",
		"sync:process-queue": "bun scripts/process-sync-queue.ts",
		"sync:channel-renew": "bun scripts/channel-renewal-cron.ts",
		"dev:sync-worker": "bun --watch scripts/process-sync-queue.ts",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:smoke": "playwright test tests/e2e/smoke",
		"test:e2e:flows": "playwright test tests/e2e/flows",
		"test:e2e:lgpd": "playwright test tests/e2e/lgpd",
		"test:e2e:a11y": "playwright test tests/e2e/accessibility",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
		"test:e2e:report": "playwright show-report",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:trace": "playwright show-trace",
		"playwright:install": "playwright install --with-deps",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun src/db/migrate.ts",
		"db:push": "drizzle-kit push",
		"db:seed": "bun src/db/seed.ts",
		"db:studio": "drizzle-kit studio",
		"db:health": "bun scripts/database-health-check.ts",
		"db:repair": "bun scripts/database-auto-repair.ts",
		"db:optimize": "bun scripts/database-performance-optimizer.ts",
		"db:compliance": "bun scripts/lgpd-compliance-validator.ts",
		"db:toolkit": "bun scripts/database-specialist-toolkit.ts"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^2.0.50",
		"@ai-sdk/google": "^2.0.44",
		"@ai-sdk/openai": "^2.0.74",
