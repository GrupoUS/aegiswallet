{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"lib": ["ES2022"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"types": ["node", "bun-types"]
	},
	"include": [
		"vite.config.ts",
		"vitest.config.ts",
		"vitest.*.config.ts",
		"scripts/**/*.ts",
		"drizzle.config.ts",
		"playwright.config.ts",
		"tailwind.config.ts"
	]
}
