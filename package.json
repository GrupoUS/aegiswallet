{
  "name": "aegiswallet",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate",
    "dev": "bunx vite",
    "dev:full": "bunx concurrently \"bunx vite\" \"bun src/server/server.ts\"",
    "dev:client": "bunx vite",
    "dev:server": "bun src/server/server.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build",
    "build:server": "echo 'Server build completed - using runtime compilation'",
    "build:dev": "vite build --mode development",
    "preview": "bun run build && bun run src/server/server.ts",
    "types:generate": "(supabase db push 2>/dev/null || true) && supabase gen types typescript --project-id qatxdwderitvxqvuonqs > src/types/database.types.ts",
    "routes:generate": "bunx @tanstack/router-cli generate",
    "start": "bun run src/server/server.ts",
    "start:prod": "NODE_ENV=production bun run src/server/server.ts",
    "lint": "bunx biome check --write --files-ignore-unknown=true --files-max-size=10485760 src scripts",
    "lint:fix": "bunx biome check --write --files-ignore-unknown=true --files-max-size=10485760 src scripts",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test": "bun run test:unit",
    "quality": "bun run lint && bun run test:coverage",
    "quality:ci": "bun run lint && bun run test:coverage",
    "validate:colors": "bun scripts/validate-colors.ts",
    "export:tokens": "bun scripts/export-design-tokens.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hono/node-server": "^1.19.6",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@remixicon/react": "^4.7.0",
    "@supabase/supabase-js": "^2.80.0",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router": "^1.134.13",
    "@trpc/client": "^11.7.1",
    "@trpc/react-query": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "@vitejs/plugin-react": "^5.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "es-toolkit": "^1.42.0",
    "framer-motion": "^12.23.24",
    "hono": "^4.10.4",
    "lovable-tagger": "^1.1.11",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "picocolors": "^1.1.1",
    "react": "^19.2.0",
    "react-aria-components": "^1.13.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "react-qr-code": "^2.0.18",
    "recharts": "^3.3.0",
    "sonner": "^2.0.7",
    "superjson": "^2.2.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
