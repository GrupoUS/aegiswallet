{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.*.config.ts",
    "scripts/**/*.ts",
    "src/db/index.ts",
    "src/db/schema/**/*.ts"
  ]
}
