{
	"buildCommand": "bun run routes:generate && bun run build:client",
	"outputDirectory": "dist",
	"installCommand": "bun install",
	"framework": null,
	"functions": {
		"api/index.ts": {
			"maxDuration": 30
		}
	},
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "/api/index.js"
		},
		{
			"source": "/dashboard",
			"destination": "/index.html"
		},
		{
			"source": "/dashboard/:path*",
			"destination": "/index.html"
		},
		{
			"source": "/login",
			"destination": "/index.html"
		},
		{
			"source": "/signup",
			"destination": "/index.html"
		},
		{
			"source": "/((?!api/).*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/assets/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/favicon.ico",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}
