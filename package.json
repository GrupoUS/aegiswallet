    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "10.4.21",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "postcss": "8.5.6",
    "shadcn": "^3.5.0",
    "supabase": "^2.54.11",
    "tailwindcss": "^4.1.17",
    "terser": "^5.44.1",
    "tw-animate-css": "^1.4.0",
    "vitest": "^3.2.4"
  }
}
