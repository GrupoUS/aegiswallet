{
  "extends": "./.oxlintrc.json",
  "description": "Healthcare Compliance Override Configuration for AegisWallet - LGPD Compliance & Voice Interface Accessibility",
  "env": {
    "browser": true,
    "es2024": true,
    "node": true
  },
  "rules": {
    // === HEALTHCARE COMPLIANCE OVERRIDES ===
    // Allow console methods for audit logging (LGPD compliance requirement)
    "no-console": ["warn", { 
      "allow": ["warn", "error", "info", "log"],
      "condition": "audit|compliance|lgpd|privacy|security|access"
    }],
    
    // Allow eval for JSON parsing in legacy financial data handling (with restrictions)
    "no-eval": "warn",
    "no-implied-eval": "warn",
    
    // Enhanced security for healthcare data
    "security/detect-object-injection": "error",
    "security/detect-possible-timing-attacks": "error",
    "security/detect-pseudoRandomBytes": "error",
    "security/detect-buffer-noassert": "error",
    "security/detect-child-process": "error",
    "security/detect-no-csrf-before-method-override": "error",
    "security/detect-non-literal-filename": "error",
    "security/detect-unsafe-regex": "error",
    
    // LGPD Data Protection - Strict handling of personal data
    "no-debugger": "error",
    "no-alert": "error",
    "no-script-url": "error",
    "no-new-func": "error",
    
    // Voice Interface Accessibility (Enhanced for Brazilian healthcare users)
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/anchor-has-content": "error",
    "jsx-a11y/anchor-is-valid": "error",
    "jsx-a11y/aria-activedescendant-has-tabindex": "error",
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-role": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/click-events-have-key-events": "error",
    "jsx-a11y/heading-has-content": "error",
    "jsx-a11y/html-has-lang": "error",
    "jsx-a11y/img-redundant-alt": "error",
    "jsx-a11y/interactive-supports-focus": "error",
    "jsx-a11y/label-has-associated-control": "error",
    "jsx-a11y/media-has-caption": "error",
    "jsx-a11y/mouse-events-have-key-events": "error",
    "jsx-a11y/no-access-key": "error",
    "jsx-a11y/no-autofocus": "warn",
    "jsx-a11y/no-distracting-elements": "error",
    "jsx-a11y/no-interactive-element-to-noninteractive-role": "error",
    "jsx-a11y/no-noninteractive-element-interactions": "error",
    "jsx-a11y/no-noninteractive-element-to-interactive-role": "error",
    "jsx-a11y/no-redundant-roles": "error",
    "jsx-a11y/no-static-element-interactions": "warn",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/scope": "error",
    "jsx-a11y/tabindex-no-positive": "error",
    
    // Enhanced voice interface specific rules
    "jsx-a11y/aria-label": ["error", {
      "components": ["input", "textarea", "button", "a"],
      "required": ["input[type=\"text\"]", "textarea", "button:not([aria-label])", "a:not([aria-label])"]
    }],
    
    "jsx-a11y/aria-labelledby": "error",
    "jsx-a11y/aria-describedby": "error",
    "jsx-a11y/role": ["error", { "allowed": ["button", "link", "textbox", "combobox", "listbox", "option"] }],
    "jsx-a11y/tabindex": ["error", { "values": [0, -1] }],
    "jsx-a11y/has-accessible-props": "error",
    "jsx-a11y/autocomplete-valid": "error",
    "jsx-a11y/heading-props": "error",
    "jsx-a11y/html-lang": "error",
    "jsx-a11y/img-redundant-alt": "error",
    "jsx-a11y/interactive-supports-focus": "error",
    "jsx-a11y/label-has-for": "error",
    "jsx-a11y/media-has-caption": "error",
    "jsx-a11y/mouse-events-have-key-events": "error",
    "jsx-a11y/no-access-key": "error",
    "jsx-a11y/no-aria-hidden-on-focusable": "error",
    "jsx-a11y/no-autofocus": "warn",
    "jsx-a11y/no-distracting-elements": "error",
    "jsx-a11y/no-interactive-element-to-noninteractive-role": "error",
    "jsx-a11y/no-noninteractive-element-interactions": "error",
    "jsx-a11y/no-noninteractive-element-to-interactive-role": "error",
    "jsx-a11y/no-noninteractive-tabindex": "error",
    "jsx-a11y/no-redundant-roles": "error",
    "jsx-a11y/no-static-element-interactions": "warn",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/scope": "error",
    "jsx-a11y/tabindex-no-positive": "error",
    "jsx-a11y/valid-aria-prop": "error",
    "jsx-a11y/valid-aria-role": "error",
    "jsx-a11y/valid-aria-value": "error",
    "jsx-a11y/valid-role": "error",
    
    // Brazilian Market Specific - Portuguese Language Support
    "unicode-bom": ["error", "never"],
    "eol-last": "error",
    
    // Financial Data Processing - Enhanced Security
    "no-global-assign": "error",
    "no-implicit-globals": "error",
    "no-iterator": "error",
    "no-new": "error",
    "no-new-wrappers": "error",
    "no-proto": "error",
    "no-throw-literal": "error",
    "no-void": "error",
    "no-with": "error",
    
    // Data Validation for Financial Operations
    "no-magic-numbers": ["warn", { 
      "ignore": [-1, 0, 1, 2, 100, 1000, 999999, 999999999],
      "enforceConst": true
    }],
    
    // Enhanced Error Handling for Financial Systems
    "consistent-return": "error",
    "default-case": "error",
    "eqeqeq": ["error", "always"],
    "no-caller": "error",
    "no-else-return": "error",
    "no-eq-null": "error",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-fallthrough": "error",
    "no-floating-decimal": "error",
    "no-implicit-coercion": "error",
    "no-invalid-this": "error",
    "no-loop-func": "error",
    "no-magic-numbers": ["warn", { 
      "ignore": [-1, 0, 1, 2, 100, 1000],
      "enforceConst": true
    }],
    "no-multi-spaces": "error",
    "no-multi-str": "error",
    "no-new": "error",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-octal-escape": "error",
    "no-param-reassign": ["error", { "props": false }],
    "no-proto": "error",
    "no-redeclare": "error",
    "no-return-assign": "error",
    "no-script-url": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-throw-literal": "error",
    "no-unmodified-loop-condition": "error",
    "no-unused-expressions": "error",
    "no-useless-call": "error",
    "no-useless-concat": "error",
    "no-useless-return": "error",
    "no-void": "error",
    "no-warning-comments": ["warn", { 
      "terms": ["todo", "fixme", "hack", "xxx"],
      "location": "anywhere"
    }],
    "no-with": "error",
    "radix": "error",
    "require-await": "error",
    "yoda": "error"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*", "**/*.test.*", "**/*.spec.*"],
      "rules": {
        "no-console": "off",
        "no-magic-numbers": "off",
        "no-unused-expressions": "warn",
        "@typescript-eslint/no-explicit-any": "warn",
        "security/detect-object-injection": "warn"
      }
    },
    {
      "files": ["**/lib/security/**/*", "**/lib/nlu/**/*", "**/lib/speech/**/*"],
      "rules": {
        "no-console": "off",
        "security/detect-object-injection": "warn",
        "no-debugger": "warn"
      }
    },
    {
      "files": ["**/supabase/**/*", "**/migrations/**/*"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn",
        "security/detect-object-injection": "warn"
      }
    },
    {
      "files": ["**/scripts/**/*"],
      "rules": {
        "no-console": "off",
        "no-process-env": "off",
        "no-sync": "off",
        "no-eval": "warn"
      }
    },
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["**/vite.config.*", "**/vitest.config.*", "**/tailwind.config.*"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-explicit-any": "warn"
      }
    }
  ],
  "settings": {
    "jsx-a11y": {
      "polymorphicPropName": "as",
      "components": {
        "Button": "button",
        "Input": "input",
        "Link": "a",
        "Dialog": "dialog",
        "Modal": "dialog",
        "Toast": "alert",
        "Notification": "alert",
        "Dropdown": "listbox",
        "Select": "combobox",
        "Checkbox": "checkbox",
        "Radio": "radio",
        "Switch": "switch",
        "Tabs": "tablist",
        "Tab": "tab",
        "Panel": "tabpanel",
        "Navigation": "nav",
        "Menu": "menu",
        "MenuItem": "menuitem",
        "Table": "table",
        "TableRow": "tr",
        "TableCell": "td",
        "Form": "form",
        "Field": "input",
        "Label": "label",
        "Legend": "legend",
        "Heading": "h1",
        "Subheading": "h2",
        "Text": "p",
        "Code": "code",
        "Pre": "pre"
      }
    }
  }
}