{
  "name": "aegiswallet",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate",
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "vite",
    "dev:server": "bun run src/server/server.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build",
    "build:server": "echo 'Server build completed - using runtime compilation'",
    "build:dev": "vite build --mode development",
    "preview": "bun run build && bun run src/server/server.ts",
    "types:generate": "supabase gen types typescript --project-id clvdvpbnuifxedpqgrgo > src/types/database.types.ts",
    "routes:generate": "bunx @tanstack/router-cli generate",
    "start": "bun run src/server/server.ts",
    "start:prod": "NODE_ENV=production bun run src/server/server.ts",
    "lint:oxlint": "oxlint",
    "lint:biome": "biome check --write",
    "lint": "bun run lint:oxlint && bun run lint:biome",
    "lint:fix": "bun run lint:biome",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test": "bun run test:unit",
    "quality": "bun run lint && bun run test:coverage",
    "quality:ci": "bun run lint:oxlint && bun run test:coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.58.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.56.0",
    "@tanstack/react-router": "^1.114.3",
    "@trpc/client": "^11.6.0",
    "@trpc/react-query": "^11.6.0",
    "@trpc/server": "^11.6.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "hono": "^4.9.9",
    "lovable-tagger": "^1.1.10",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.64.0",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "superjson": "^2.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "zod": "^4.1.11",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "jsdom": "^27.0.0",
    "oxlint": "^1.19.0",
    "shadcn": "^3.4.0",
    "terser": "^5.44.0",
    "vitest": "^3.2.4"
  }
}
